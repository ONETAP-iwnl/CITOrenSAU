<Window x:Class="CITOGAU.Windows.WorkWindows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ЦИТОГАУ - Управление заявками" Height="600" Width="800" Background="#DAD7CD" WindowStartupLocation="CenterScreen">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Background="#588157" Foreground="Black">
                <MenuItem Header="Файл">
                    <MenuItem Header="Выход" Click="Exit_Click"/>
                </MenuItem>
                <MenuItem Header="Заявки">
                    <MenuItem Header="Просмотр заявок" Click="ViewRequests_Click"/>
                    <MenuItem Header="Создать заявку" Click="CreateRequest_Click"/>
                </MenuItem>
                <MenuItem Header="Отчёты">
                    <MenuItem Header="Просмотр отчётов" Click="ViewReports_Click"/>
                </MenuItem>
                <MenuItem Header="Помощь">
                    <MenuItem Header="О программе" Click="AboutMenuItem_Click"/>
                </MenuItem>
            </Menu>
            <ContentControl x:Name="MainContent" />
            <Image Source="/Images/Background.png" 
                   Width="780" 
                   Height="520" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Margin="0, 50, 0, 0"/>
        </DockPanel>
    </Grid>
</Window>
